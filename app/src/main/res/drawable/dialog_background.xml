<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Gradient background for glassmorphism effect -->
    <gradient
        android:angle="135"
        android:startColor="#BB1A1A2E"
        android:centerColor="#BB16213E"
        android:endColor="#B80F1B2E"
        android:type="linear" />

    <!-- Rounded corners -->
    <corners android:radius="20dp" />


    <!-- Padding inside dialog -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />
</shape>