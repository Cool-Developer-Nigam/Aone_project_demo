<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Main App Theme -->
    <style name="Theme.StudentManager" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_primary</item>
        <item name="colorPrimaryVariant">@color/purple_dark</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <item name="colorSecondary">@color/accent_pink</item>
        <item name="colorSecondaryVariant">@color/accent_blue</item>
        <item name="colorOnSecondary">@android:color/white</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

        <!-- Apply custom dialog theme to all dialogs -->
        <item name="materialAlertDialogTheme">@style/CustomMaterialAlertDialog</item>
        <item name="alertDialogTheme">@style/CustomMaterialAlertDialog</item>
    </style>

    <!-- Custom Material Alert Dialog Theme -->
    <style name="CustomMaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <!-- Background color -->
        <item name="android:background">@drawable/dialog_background</item>
        <item name="backgroundTint">@color/dialog_background</item>

        <!-- Title styling -->
        <item name="materialAlertDialogTitleTextStyle">@style/CustomDialogTitle</item>

        <!-- Message styling -->
        <item name="materialAlertDialogBodyTextStyle">@style/CustomDialogMessage</item>

        <!-- Button styling -->
        <item name="buttonBarPositiveButtonStyle">@style/CustomDialogButton.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/CustomDialogButton.Negative</item>
        <item name="buttonBarNeutralButtonStyle">@style/CustomDialogButton.Neutral</item>

        <!-- Corner radius -->
        <item name="shapeAppearanceOverlay">@style/DialogShapeAppearance</item>

        <!-- Elevation -->
        <item name="elevation">24dp</item>
    </style>

    <!-- Dialog Shape (Rounded Corners) -->
    <style name="DialogShapeAppearance" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <!-- Dialog Title Style -->
    <style name="CustomDialogTitle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Dialog Message Style -->
    <style name="CustomDialogMessage" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">#E0FFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <!-- Positive Button (e.g., OK, Logout, Confirm) -->
    <style name="CustomDialogButton.Positive" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@android:color/white</item>
        <item name="backgroundTint">@color/purple_primary</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="rippleColor">#40FFFFFF</item>
    </style>

    <!-- Negative Button (e.g., Cancel) -->
    <style name="CustomDialogButton.Negative" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#B0FFFFFF</item>
        <item name="backgroundTint">#30FFFFFF</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="rippleColor">#40FFFFFF</item>
    </style>

    <!-- Neutral Button -->
    <style name="CustomDialogButton.Neutral" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#90FFFFFF</item>
        <item name="rippleColor">#40FFFFFF</item>
    </style>
</resources>